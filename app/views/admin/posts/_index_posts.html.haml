.container
  .row
    - @posts.each do |p|
      .col-sm-3
        .panel
          .panel-heading
            .row
              %img.col-sm-3.img-responsive{:alt => "Image", :src => "#{p.post_creator.try(:avatar)}", class: "img-circle", :style => "width:25%"}/
              .col-sm-9.position-title
                .text-blue=p.post_creator.try(:fan_page)
                =p.try(:post_date)&.strftime('%d de %b de %Y a las %l:%M')
            .row
              .text-post-style=p.try(:title).present? ? p.try(:title).upcase : ""
          .panel-body
            %img.img-responsive{:alt => "Image", :src => "https://placehold.it/150x80?text=IMAGE", :style => "width:100%; height: 225px;"}/
            .progress.progress-style
              .progress-bar-red{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "10", :role => "progressbar", :style => "width:#{p.uncategorized_porcent}%"}
                .transp= "#{p.uncategorized_porcent}%  "
            .row.stadistic-style
              .col-sm-3.text-color-grey.text-small-bold
                =p.post_comments.count
                %br/
                =I18n.t("active_admin.comments")
              .col-sm-3.text-color-darkgrey.text-small-bold
                =p.count_comments_categorized
                %br/
                =I18n.t("active_admin.categorized")
              .col-sm-6.text-color-red.text-small-bold.padding-uncategorized
                =p.count_comments_uncategorized
                %br/
                =I18n.t("active_admin.uncategorized")
          .panel-footer.footer-style 
            .text-color-grey.text-link-footer
              = link_to "Ver Comentarios", comments_admin_post_path(p)
    .col-sm-3
      .panel-body-link
        = link_to "-", new_admin_post_path, class: "add-post"
        %br/
        .text-link
          = "Añadir Nueva Publicación" 
            
              
%br/

