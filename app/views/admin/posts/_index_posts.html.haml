.container
  .row
    - @posts.each do |p|
      .col-sm-3
        .panel
          .panel-heading
            .row
              %img.col-sm-3.img-responsive{:alt => "Image", :src => "#{p.post_creator.try(:avatar) || '/assets/default-user.png'}", class: "img-circle", :style => "width:25%"}/
              .col-sm-9.position-title
                =link_to p.post_creator.try(:fan_page), edit_admin_post_path(p), class:"text-blue"
                %br
                =p.try(:post_date)&.strftime('%d de %b de %Y a las %l:%M')
            .row
              -if p.try(:description).present?
                - if p.description.size > 32
                  .text-post-style{:description => "#{p.try(:description).upcase}"}
                    = p.try(:description).upcase.truncate 62
                - else
                  %div{:style => "margin: 20px 0px 10px 17px;"}
                    = p.try(:description).upcase
              -else
                .text-post-style=""
          .panel-body
            = link_to comments_admin_post_path(p) do
              %img.img-responsive{:alt => "Image", :src => "#{p.image || 'https://placehold.it/150x80?text=IMAGE'}", :style => "width:100%; height: 225px;"}/
            .progress.progress-style
              .progress-bar-red{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "10", :role => "progressbar", :style => "width:#{p.uncategorized_porcent}%"}
                .transp= "#{p.uncategorized_porcent}%  "
            .row.stadistic-style
              .col-sm-3.text-color-grey.text-small-bold
                =p.post_comments.count
                %br/
                =I18n.t("active_admin.comments")
              .col-sm-3.text-color-darkgrey.text-small-bold
                =p.count_comments_categorized
                %br/
                =I18n.t("active_admin.categorized")
              .col-sm-6.text-color-red.text-small-bold.padding-uncategorized
                =p.count_comments_uncategorized
                %br/
                =I18n.t("active_admin.uncategorized")
          .panel-footer.footer-style 
            .text-color-grey.text-link-footer.left
              = link_to "Ver Comentarios", comments_admin_post_path(p)
            .text-color-grey.text-link-footer.right
              = link_to "Agendar Scraping", post_scraping_path(p)
    .col-sm-3
      .panel-body-link
        = link_to "-", new_admin_post_path, class: "add-post"
        %br/
        .text-link
          = "Añadir Nueva Publicación" 
            
              
%br/

